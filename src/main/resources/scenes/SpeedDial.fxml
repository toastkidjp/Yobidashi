<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXDatePicker?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
  xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="jp.toastkid.speed_dial.Controller" fx:id="root"
  >
  <top>
    <VBox prefHeight="395.0" alignment="CENTER">
      <children>
        <Label fx:id="title" contentDisplay="CENTER"
          text="Title" textAlignment="CENTER"
          style="-fx-background-color: rgba(255, 255, 255, 0.9);"
          >
          <font><Font size="60.0" /></font>
        </Label>
      </children>
    </VBox>
  </top>
   <center>
     <VBox prefHeight="400.0" alignment="CENTER" >
       <children>
       <HBox alignment="CENTER" >
         <children>
            <JFXTextField fx:id="input" onAction="#search"
              minWidth="400.0" promptText="Input query"
              style="-fx-background-color: rgba(20.0, 0.0, 50.0, 0.9);-fx-font-size: 20pt;"
              >
            </JFXTextField>
            <VBox>
               <children>
                 <JFXComboBox fx:id="type" minWidth="180.0">
                   <tooltip>
                        <Tooltip text="Style を選択します。" />
                     </tooltip>
                   <items>
                     <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Y!" />
                        <String fx:value="Y!辞書" />
                        <String fx:value="Weblio" />
                        <String fx:value="食べログ" />
                        <String fx:value="Wikipedia" />
                        <String fx:value="Y!RTS" />
                     </FXCollections>
                   </items>
                 </JFXComboBox>
                 <JFXButton onAction="#search" prefWidth="180.0" text="Search!" />
               </children>
            </VBox>
         </children>
      </HBox>
      </children>
      </VBox>
   </center>
   <bottom>
      <JFXDatePicker BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
